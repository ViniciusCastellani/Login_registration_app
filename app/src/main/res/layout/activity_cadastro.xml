<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_registration_screen_dark"
    tools:context=".CadastroActivity">

    <LinearLayout
        android:id="@+id/linearLayoutSetaVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_icon_light" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_edittext_login"
        android:backgroundTint="@color/dark_grey"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNomeUsuarioCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/person_icon_light"
                android:drawablePadding="8dp"
                android:hint="Nome"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/gray"
                android:textSize="11sp"/>

            <EditText
                android:id="@+id/editTextEmailUsuarioCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/email_icon_light"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/gray"
                android:textSize="11sp"/>

            <EditText
                android:id="@+id/editTextSenhaUsuarioCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/lock_icon_light"
                android:drawableRight="@drawable/eye_see_icon_light"
                android:drawablePadding="8dp"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/gray"
                android:textSize="11sp"/>

            <EditText
                android:id="@+id/editTextConfirmarSenhaUsuarioCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/lock_icon_light"
                android:drawableRight="@drawable/eye_see_icon_light"
                android:drawablePadding="8dp"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/gray"
                android:textSize="11sp"/>

            <Button
                android:id="@+id/butttonCadastro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:onClick="cadastrarUsuario"
                android:text="Cadastrar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewCadastroLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:padding="8dp"
        android:text="Ao criar sua conta você concorda com nossos Termos de Uso e Políticas de Privacidade"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="13dp" />

</RelativeLayout>